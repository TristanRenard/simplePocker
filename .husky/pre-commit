#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# DÃ©tecter si pnpm ou npm est utilisÃ©
if [ -f pnpm-lock.yaml ]; then
  echo "Detected pnpm, running pnpm lint"
  pnpm lint
  pnpm test-run
  echo "start build"
  pnpm build
elif [ -f package-lock.json ]; then
  echo "Detected npm, running npm run lint"
  npm run lint
  npm run test-run
  echo "start build"
  npm run build
  elif [ -f yarn.lock ]; then
  echo "Detected yarn, running yarn lint"
  yarn lint
  yarn test-run
  echo "start build"
  yarn build
else
  echo "Neither pnpm nor yarn nor npm detected. Please ensure one is installed."
  exit 1
fi
